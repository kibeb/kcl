# Usage, e.g.: du -d 1 . | sort -n | sed -f ~/kcl/sed/number-readable.sed

s/^\([0-9]\s\)/         \1/
s/^\([0-9][0-9]\s\)/        \1/
s/^\([0-9][0-9][0-9]\s\)/       \1/
s/^\([0-9]\)\([0-9][0-9][0-9]\s\)/     \1,\2/
s/^\([0-9][0-9]\)\([0-9][0-9][0-9]\s\)/    \1,\2/
s/^\([0-9][0-9][0-9]\)\([0-9][0-9][0-9]\s\)/   \1,\2/
s/^\([0-9]\)\([0-9][0-9][0-9]\)\([0-9][0-9][0-9]\s\)/ \1,\2,\3/
s/^\([0-9][0-9]\)\([0-9][0-9][0-9]\)\([0-9][0-9][0-9]\s\)/\1,\2,\3/
